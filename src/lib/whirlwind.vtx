                                clonedElement.onmouseover = originalElement.onmouseover;
                                clonedElement.onmousemove = originalElement.onmousemove;
                                document.getElementById('${container.id}').appendChild(clonedElement)
                            "

                            wasm.run_script(script)

                            var _data = data

                            dependencies.forEach((var) => {
                                // If it doesn't exist in data
                                // It's a temporary, so we don't care about hooking it
                                if (!data[var]) {
                                    return
                                }
                                const currentOnChange = data[var].info().onChangeHook
                                if (currentOnChange) {
                                    data[var]::onChange((_e) => {
                                        currentOnChange(_e)
                                        if (new_element._data) {
