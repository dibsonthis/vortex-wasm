                                        new_element.update({
                                            innerHTML: parsed_content.content
                                        })
                                    })
                                }
                            })
                        }
                    } else if (values.length() == 3) {

                        var iterator = values[1].trim()
                        var _index = values[2].trim()

                        for (data[list], i, v) {
                            var temp_data = {...data}
                            temp_data[iterator] = v
                            temp_data[_index] = i

                            const content = tag.content.parseContent(temp_data)
