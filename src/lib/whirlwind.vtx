const __script_event_stringify = "globalThis._event = JSON.stringify({
    type: e.type,
    clientX: e.clientX,
    clientY: e.clientY,
    ctrlKey: e.ctrlKey,
    altKey: e.altKey,
    shiftKey: e.shiftKey,
    x: e.x,
    y: e.y,
    fromElement: {
        id: e?.fromElement?.id
    },
    target: {
